            <p>
              <button href="#" class="btn btn-secondary custom-prev" data-bs-target="#carouselExampleFade" data-bs-slide="prev">Anterior</button>
              <button href="#" class="btn btn-secondary custom-next" data-bs-target="#carouselExampleFade" data-bs-slide="next">Siguiente</button>
            </p>
          </div>
          <div class="col-lg-9 mb-0">

            <div id="carouselExampleFade" class="carousel slide carousel-fade mb-0" data-bs-ride="carousel">
              <div class="carousel-inner" id="carrusel">
                <div class="spinner-border text-danger" role="status" id="spiner"></div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>



