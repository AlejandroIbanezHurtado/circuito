{% extends 'base.html.twig' %}
{% block titulo %}
  <h1>Vehículos</h1>
  <p>Nuestros superdeportivos te esperan</p>
{% endblock %}
{% block lib %}
  <script src="{{ asset('js/lib/lib-vehiculos.js') }}"></script>
{% endblock %}
{% block body %}
    <video autoplay muted loop width="100%">
      <source src="videos/videoLambo.mp4" type="video/ogg">
    </video>

 <div class="site-section pt-0 pb-0 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-12">
            
              <form class="trip-form">
                <div class="row align-items-center mb-4">
                  <div class="col-md-6">
                    <h3 class="m-0">Escoge la hora y el día</h3>
                  </div>
                  <div class="col-md-6 text-md-right">
                    <span class="text-danger" id="n_coches">
                      <div class="spinner-border text-danger" role="status"></div>
                    </span>{#Campo calculado de coches totales#}
                    <span>coches disponibles</span></span>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group col-md-3">
                    <label for="cf-1">Día</label>
                    <input type="text" id="cf-1" class="form-select form-control calendario" readonly>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="cf-2">Hora</label>
                    <select id="cf-2" class="form-select form-control" aria-label="Default select example">
                      <option selected value="0">-Selecciona hora-</option>
                      <option value="09:00">09:00</option>
                      <option value="09:30">09:30</option>
                      <option value="10:00">10:00</option>
                      <option value="10:30">10:30</option>
                      <option value="11:00">11:00</option>
                      <option value="11:30">11:30</option>
                      <option value="12:00">12:00</option>
                      <option value="12:30">12:30</option>
                      <option value="13:00">13:00</option>
                      <option value="13:30">13:30</option>
                      <option value="14:00">14:00</option>
                      <option value="17:00">17:00</option>
                      <option value="17:30">17:30</option>
                      <option value="18:00">18:00</option>
                      <option value="18:30">18:30</option>
                      <option value="19:00">19:00</option>
                      <option value="19:30">19:30</option>
                      <option value="20:00">20:00</option>
                    </select>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="cf-3">Marca</label>
                    <select id="cf-3" class="form-select form-control" aria-label="Default select example">
                      <option selected value="0">-Selecciona marca-</option>{#Se rellena en funcion de las marcas que existen en la BD#}
                    </select>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="cf-4">Orden</label>
                    <select id="cf-4" class="form-select form-control" aria-label="Default select example">
                      <option selected value="0">Ordenar por</option>
                      <option value="asc">Precio ascendente</option>
                      <option value="des">Precio descendente</option>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group rounded col-lg-9 offset-lg-3">
                    <input type="search" class="form-control rounded" placeholder="Buscar" aria-label="Search" aria-describedby="search-addon" />
                  </div>
                  <div class="col-lg-12">
                    <input type="submit" value="Buscar" class="btn btn-danger" id="btnBuscar">
                  </div>
                </div>
              </form>
            </div>
        </div>
      </div>
    </div>

  {#Filtros: precio, marca, dia, hora#}
    <div class="site-section bg-light">
      <div class="container">
        <div class="row" id="tablon">
          <div class="d-flex justify-content-center">
          <span class="spinner-border text-danger spinner-border-sm" style="width: 200px; height: 200px"></span>
          </div>
        </div>
        <div class="col-12">
            {# <span class="p-3">1</span>
            <a href="#" class="p-3">2</a>
            <a href="#" class="p-3">3</a>
            <a href="#" class="p-3">4</a> #}
            <nav aria-label="Paginas">
              <ul class="pagination">
                <li class="page-item disabled" id="anterior">
                  <a class="page-link" href="#" tabindex="-1">Anterior</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="#">Siguiente</a>
                </li>
              </ul>
            </nav>
          </div>
      </div>
    </div>
{% endblock %}