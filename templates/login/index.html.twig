{% extends 'base.html.twig' %}

{% block titulo %}
    <h1>Iniciar sesión</h1>
{% endblock %}

{% block body %}
    <div class="site-section pt-0 pb-0 bg-negro">
      <div class="container">
        <div class="row">
          <div class="col-12">
                <form action="{{ path('login') }}" method="post" class="trip-form">
                    <div class="row align-items-center mb-4">
                        {% if error %}
                            <div class="alert alert-danger col-md-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %} 
                        <div class="col-md-6">
                            <label for="username">Correo:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-select form-control"/>
                        </div>
                        <div class="col-md-6">
                            <label for="password">Contraseña:</label>
                            <input type="password" id="password" name="_password" class="form-select form-control"/>
                        </div>
                        {# If you want to control the URL the user is redirected to on success#}
                        <input type="hidden" name="_target_path" value="index" class="form-select form-control"/>
                        <a href="register" class="form-select col-md-12 text-info">¿Aún no estás registrado?</a>
                        <button type="submit" class="btn btn-danger ml-4 mt-4">Iniciar sesion</button>
                    </div>
                </form>
            </div>
        </div>
      </div>
    </div>
{% endblock %}
